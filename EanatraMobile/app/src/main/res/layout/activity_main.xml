<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/lineraaa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/framegeneral"
                android:layout_width="match_parent"
                android:layout_height="734dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/FrameFormaulaire"
                    android:layout_width="362dp"
                    android:layout_height="560dp"
                    android:layout_gravity="center"
                    android:background="#EDEDED"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/eanatra"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Bienvenue sur E-anatra"
                            android:textColor="@color/black"
                            android:textSize="25dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/formulaire"
                        android:layout_width="match_parent"
                        android:layout_height="281dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="260dp"
                            android:layout_height="101dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewemail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Email" />

                            <EditText
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="20"
                                android:text="gino@gmail.com"
                                android:inputType="textEmailAddress" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="264dp"
                            android:layout_height="97dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewpassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mot de passe" />

                            <EditText
                                android:id="@+id/password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:ems="20"
                                android:text="test"
                                android:inputType="textPassword" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearbouttonLogIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnlogin"
                            android:layout_width="167dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Se Connecter"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/btnsignin"
                            android:layout_width="164dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="S'inscrire"
                            android:textAllCaps="false" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/loadingLogIn"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/errormessageLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ff0000"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>